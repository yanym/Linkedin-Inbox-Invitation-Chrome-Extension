{
  "manifest_version": 2,

  "name": "__MSG_appName__",
  "short_name": "LinkedIn A Better Extension",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.1.3",
  "author": "Juan",

  "browser_action": {
    "default_icon": "./assets/icon-32x32.png",
    "default_popup": "./src/popup.html",
    "default_title": "LinkedIn messages"
  },

  "icons": {
    "16": "./assets/icon-16x16.png",
    "32": "./assets/icon-32x32.png",
    "128": "./assets/icon-128x128.png"
  },

  "permissions": [
    "cookies",
    "*://*.linkedin.com/"
  ]
}
